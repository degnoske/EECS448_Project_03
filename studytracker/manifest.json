{
  "manifest_version": 2,
	"content_security_policy": "script-src 'self' 'unsafe-eval' https://www.gstatic.com; object-src 'self'",
  "name": "Study Tracker",
  "description": "Tracks Study Time",
  "version": "1.0",

  "browser_action": {
    "default_icon": "book.png",
   "default_popup": "popup.html"
  },
"content_scripts": [
    {
      "matches": ["https://Facebook.com/"],
      "js": ["alert.js"]
    }
  ],
  
  "background": {
    "scripts": ["background.js"],
    "persistent": true
	
  },
  "permissions": [
  "background",
    "activeTab",
    "contextMenus",
    "https://ajax.googleapis.com/"
	
  ]
  
}
