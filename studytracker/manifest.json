{
  "manifest_version": 2,
  "content_security_policy": "script-src 'self' 'unsafe-eval' https://ajax.googleapis.com; object-src 'self'",

  "name": "Study Tracker",
  "description": "Tracks Study Time",
  "version": "1.0",

  "browser_action": {
    "default_icon": "book.png",
   "default_popup": "popup.html"
  },
"content_scripts": [
    {
      "matches": ["https://*/*"],
      "css" : ["style.css"]
    }
  ],
  "background": {
    "page": "alert.html",
    "persistent": true
  },
  "permissions": [
  "background",
    "activeTab",
    "contextMenus",
    "webNavigation",
    "https://ajax.googleapis.com/"
  ]
  
}
